public class TabLabel extends javax.swing.JPanel implements ActionListener {

    public final String II;
    public final String title;
    public final Resources RSC;
    public final ItemTable DT;

    /** Creates new form TabLabel */
    public TabLabel(String t, String i, Resources rsc, ItemTable dt, boolean btn) {
        initComponents();
        RSC=rsc;
        II=i;
        title=t;
        DT=dt;
        jLbl.setText(t);
        jLbl.setIcon(RSC.Icons.getIcon(II));
        if (btn) {
            JButton BtnSwitch=new JButton();
            BtnSwitch.setIcon(RSC.Icons.getIcon("application_view_tile"));
            BtnSwitch.setPreferredSize(new Dimension(16,15));
            BtnSwitch.setBorderPainted(false);
            BtnSwitch.setOpaque(false);
            BtnSwitch.setContentAreaFilled(false);
            BtnSwitch.addActionListener(this);
            BtnSwitch.setName("switch");
            JButton BtnClose=new JButton();
            BtnClose.setIcon(RSC.Icons.getIcon("closebtn"));
            BtnClose.setPreferredSize(new Dimension(16,15));
            BtnClose.setBorderPainted(false);
            BtnClose.setOpaque(false);
            BtnClose.setContentAreaFilled(false);
            BtnClose.addActionListener(this);
            BtnClose.setName("close");
            JPanel panel=new JPanel();
            panel.add(BtnSwitch);
            panel.add(BtnClose);
            panel.setOpaque(false);
            this.add(panel,BorderLayout.EAST);
        } else {
            if (t.equals(""))
                jLbl.setBorder(javax.swing.BorderFactory.createEmptyBorder(0, 0, 0, 0));
            else
                jLbl.setBorder(javax.swing.BorderFactory.createEmptyBorder(1, 0, 0, 3));
        }
    }

