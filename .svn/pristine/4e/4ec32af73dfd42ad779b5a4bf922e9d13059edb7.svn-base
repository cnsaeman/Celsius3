    public void actionPerformed(ActionEvent e) {
        if (((JButton)e.getSource()).getName().equals("switch")) {
            DT.switchView();
        }
        if (((JButton)e.getSource()).getName().equals("close")) {
            DT.close();
        }
    }

}
